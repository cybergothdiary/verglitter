<%- layout('./layout/boilerplate') %>

<header>
    <%- include('./partials/navbar') %>
</header>
<div class="brands-section container py-5">
    <div class="brand-card d-flex justify-content-between align-items-center">
        <div class="brand-card-img">
            <img class="brand-card-img" src="/assets/maybelline/maybelline-card.jpeg">
        </div>
        <div class="brand-card-description">
            <h5><%= brand.name %></h5>
            <p><b>Founded in:</b> <%= brand.foundedIn %>, <%= brand.country %></p>
            <p><%= brand.history %></p>
            <a href="/brands/<%= brand.short %>/add" class="btn btn-sm btn-add">Wanna add a product?</a>
        </div>
    </div>
    <h5 class="text-center mt-5">The catalog of <%= brand.name %> is presented below:</h5>
    <div class="d-flex justify-content-between flex-wrap mt-3">
        
    </div>
</div>