<%- layout('layout/boilerplate') %>

<header>
    <%- include('../partials/navbar') %>
</header>
<div class="container col-4 p-5">
    <a href="/brands/<%= product.brand.short %>/<%= product._id %>" class="product-back d-block text-center">&#8593; Back to the product page</a>
    <form class="mt-4 bs-validation" action="/brands/<%= product.brand.short %>/<%= product._id %>" method="post" novalidate>
        <!-- <p class="mb-5">All reviews, regardless of their positive or negative connotation, will be published.</p> -->
        <div class="form-group mt-5">
            <p class="label-required">How would you rate this product?</p>
            
            <div class="rating-widget">
                <input type="radio" name="review[rating]" id="rating1" value="1" required>
                <label for="rating1">1</label>
                <input type="radio" name="review[rating]" id="rating2" value="2">
                <label for="rating2">2</label>
                <input type="radio" name="review[rating]" id="rating3" value="3">
                <label for="rating3">3</label>
                <input type="radio" name="review[rating]" id="rating4" value="4">
                <label for="rating4">4</label>
                <input type="radio" name="review[rating]" id="rating5" value="5">
                <label for="rating5">5</label>
            </div>
        </div>
        <div class="form-group">
            <label class="label-required" for="headline">Headline:</label>
            <input type="text" class="form-control" id="headline" name="review[headline]" placeholder="Leave a headline for your review" required>
            <small class="form-text text-muted">Make it short & simple.</small>
            <div class="invalid-feedback">Headline is required</div>
        </div>
        <div class="form-group">
            <label class="label-required" for="content">Content:</label>
            <textarea class="form-control" name="review[content]" id="content" rows="5" placeholder="Share with us your experience..." required></textarea>
            <small class="form-text text-muted">What would you note about the product?<br>Please, be polite and consistent with your expressions.</small>
            <small class="form-text text-muted"></small>
            <div class="invalid-feedback">Review content is required</div>
        </div>
        <button class="btn btn-sm btn-success">Send</button>
    </form>
</div>